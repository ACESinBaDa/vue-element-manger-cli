/*
   全局配置颜色配置: build/utils.js
   generareLoaders 方法后添加 配置参数
*/
/* 主题色 */
$mainColor = #ff3341
/* 字体设置 */
fontSize($size, $lheight, $color, $weight = normal)
  font-size $size
  color $color
  line-height $lheight
  font-weight $weight
/* 移动端border处理 */
borders($width = 1px, $style = solid, $color = #ccc, $radius = 0)
  position relative
  border-radius $radius
  &:after
    content ''
    pointer-events none // 解决iphone上的点击无效Bug
    display block
    position absolute
    left 0
    top 0
    transform-origin 0 0
    border $width $style $color
    border-radius $radius
    box-sizing border-box
    // z-index 0
    width 100%
    height 100%
    @media (-webkit-min-device-pixel-ratio: 2), (min-device-pixel-ratio: 2)
      width 200%
      height 200%
      border-radius $radius * 2
      transform scale(0.5) translateZ(0)
    @media (-webkit-min-device-pixel-ratio: 3), (min-device-pixel-ratio: 3)
      width 300%
      height 300%
      border-radius $radius * 3
      transform scale(0.33333) translateZ(0)
/* 单方向边框处理 */
border-px($type = bottom, $color = #ccc)
  position relative
  &:after
    content ''
    position absolute
    top $type == top ? 0 : ''
    bottom $type == bottom ? 0 : ''
    left $type == right ? '' : 0
    right $type == left ? '' : 0
    width ($type == top) || ($type == bottom) ? 100% : 1px
    height ($type == left) || ($type == right) ? 100% : 1px
    background $color
    @media (-webkit-min-device-pixel-ratio: 2), (min-device-pixel-ratio: 2)
      width ($type == top) || ($type == bottom) ? 200% : 1px
      height ($type == left) || ($type == right) ? 200% : 1px
      transform scale(0.5) translate3d(($type == top) || ($type == bottom) ? -50% : 0, ($type == left) || ($type == right) ? -50% : 0, 0)
    @media (-webkit-min-device-pixel-ratio: 3), (min-device-pixel-ratio: 3)
      width ($type == top) || ($type == bottom) ? 300% : 1px
      height ($type == left) || ($type == right) ? 300% : 1px
      transform scale(0.33333) translate3d(($type == top) || ($type == bottom) ? -100% : 0, ($type == left) || ($type == right) ? -100% : 0, 0)